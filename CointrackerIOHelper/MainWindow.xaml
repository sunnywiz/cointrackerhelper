<Window x:Class="CointrackerIOHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CointrackerIOHelper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <WrapPanel MaxHeight="100" DockPanel.Dock="Top">
            <Label>1. Load transaction history from Cointracker.IO so that we know what to not import again</Label>
            <Button Name="ImportCointrackerHistory" Click="ImportCointrackerHistory_OnClick">Import Cointracker History</Button>
        </WrapPanel>
        <WrapPanel DockPanel.Dock="Top">
            <Label FontWeight="ExtraBold">A. Voyager</Label>
            <Label>Contact Voyager Support to get CSV in their format</Label>
            <Button Name="ImportVoyagerTrades" IsEnabled="False" Click="ImportVoyagerTrades_OnClick">Import Voyager Format Here</Button>
            <TextBlock Name="VoyagerStatus">status goes here</TextBlock>
            <Button Name="ExportVoygaterToCT" IsEnabled="False">Export stuff to send to CT</Button>
        </WrapPanel>
        <TabControl>
            <TabItem Name="CTTab" Header="Cointracker">
                <DataGrid Name="CTGrid" AutoGenerateColumns="True"/>
            </TabItem>
            <TabItem Name="VoyagerInTab" Header="Voyager In">
                <DataGrid Name="VGINGrid" AutoGenerateColumns="True"/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
